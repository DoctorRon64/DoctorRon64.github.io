{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "SASS compile|autoprefix|minimize and live-reload dev server using Browsersync for static HTML",
  "main": "docs/index.html",
  "author": "5t3ph",
  "scripts": {
    "build:sass": "sass --no-source-map src/scss/app.scss:docs/assets/css",
    "copy:assets": "copyfiles -u 1 \"./src/assets/**/*\" docs/assets",
    "copy:html": "copyfiles -u 2 ./src/html/*.html docs",
    "copy:json": "copyfiles -u 1 ./src/json/* docs",
    "copy:txt": "copyfiles -u 2 ./src/txt/* docs",
    "copy": "npm-run-all --parallel copy:*",
    "watch:json": "onchange 'src/json/*' -- npm run copy:json",
    "watch:assets": "onchange 'src/assets/**/*' -- npm run copy:assets",
    "watch:html": "onchange 'src/html/*.html' -- npm run copy:html",
    "watch:sass": "sass --no-source-map --watch src/scss:docs/assets/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server docs --files docs",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss --config postcss.config.js docs/assets/css/*.css -r --no-map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  }
}